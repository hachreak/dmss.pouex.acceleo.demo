<?xml version="1.0" encoding="ASCII"?>
<pouexmm:Game
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pouexmm="http://pouexmm/1.0"
    name="index">
  <pouex name="Pippo">
    <actions
        xsi:type="pouexmm:PouexAction"
        name="Play">
      <influences
          feature="//@pouex/@features.0"
          operator="SUBTRACTION"
          value="10.0"/>
      <influences
          feature="//@pouex/@features.1"
          value="1.0"/>
    </actions>
    <actions
        xsi:type="pouexmm:PouexAction"
        name="Eat">
      <influences
          feature="//@pouex/@features.0"
          value="10.0"/>
    </actions>
    <states
        name="Happy">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="Pouex is happy"
          threshold="7.0"
          feature="//@pouex/@features.1"/>
      <bodyAlterations
          bodyPart="//@pouex/@bodyparts.0"
          image="face_happy.png"/>
    </states>
    <states
        xsi:type="pouexmm:StateDead"
        name="TheEnd">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="Pouex died for obesity"
          threshold="80.0"
          feature="//@pouex/@features.0"/>
      <activationConditions
          xsi:type="pouexmm:MinThresholdActivationCondition"
          name="if is not happy, died"
          threshold="0.1"
          feature="//@pouex/@features.1"/>
      <bodyAlterations
          bodyPart="//@pouex/@bodyparts.0"
          image="face_dead.png"/>
    </states>
    <states
        name="Overweight">
      <activationConditions
          xsi:type="pouexmm:AndLogicActivationCondition"
          name="if_weight_and_not_happy">
        <terms
            xsi:type="pouexmm:MaxThresholdActivationCondition"
            name="to much weight"
            threshold="80.0"
            feature="//@pouex/@features.0"/>
        <terms
            xsi:type="pouexmm:StateActivationCondition"
            name="not happy"
            state="//@pouex/@states.0"/>
        <terms
            xsi:type="pouexmm:OrLogicActivationCondition"
            name="or test">
          <terms
              xsi:type="pouexmm:MinThresholdActivationCondition"
              name="if not much happy"
              threshold="7.0"
              feature="//@pouex/@features.1"/>
          <terms
              xsi:type="pouexmm:MaxThresholdActivationCondition"
              name="if not less happy"
              threshold="2.0"
              feature="//@pouex/@features.1"/>
        </terms>
      </activationConditions>
    </states>
    <features
        xsi:type="pouexmm:Physic"
        default="20.0"
        minimum="5.0"
        maximum="100.0"
        name="Weight"
        MeasurementUnit="kg"/>
    <features
        xsi:type="pouexmm:Emotional"
        default="3.0"
        maximum="10.0"
        name="Happiness"
        MeasurementUnit="hp"/>
    <bodyparts
        name="face"
        image="face_devil.png"
        width="100"
        height="100">
      <subparts
          name="eyedx"
          image="eye_dx.png"
          width="20"
          height="20">
        <subparts
            name="pupilla"
            image="pupilla.png"
            width="50"
            height="50"/>
      </subparts>
    </bodyparts>
  </pouex>
</pouexmm:Game>
